<% layout("../Layouts/boilerplate") %>

<style>
  .edit-listing-container {
    max-width: 700px;
    margin: 40px auto;
    padding: 0 20px;
  }

  .page-header {
    text-align: center;
    margin-bottom: 40px;
  }

  .page-header h1 {
    font-size: 2rem;
    font-weight: 700;
    color: #222;
    margin-bottom: 10px;
  }

  .page-header p {
    color: #717171;
    font-size: 1rem;
  }

  .listing-form {
    background: #fff;
    border-radius: 16px;
    padding: 40px;
    box-shadow: 0 2px 16px rgba(0,0,0,0.08);
    border: 1px solid rgba(0,0,0,0.05);
  }

  .form-label {
    font-weight: 600;
    color: #222;
    margin-bottom: 8px;
    font-size: 0.95rem;
  }

  .form-control,
  .form-select {
    border-radius: 10px;
    border: 1px solid #ddd;
    padding: 12px 16px;
    font-size: 0.95rem;
    transition: all 0.3s ease;
  }

  .form-control:focus,
  .form-select:focus {
    border-color: var(--primary-red);
    box-shadow: 0 0 0 0.2rem rgba(255, 56, 92, 0.15);
  }

  textarea.form-control {
    min-height: 120px;
    resize: vertical;
  }

  .input-group-text {
    background: #f8f9fa;
    border: 1px solid #ddd;
    border-radius: 10px 0 0 10px;
    color: #717171;
    font-weight: 500;
  }

  .input-group .form-control {
    border-radius: 0 10px 10px 0;
  }

  .submit-btn {
    background: var(--primary-red);
    color: #fff;
    border: none;
    border-radius: 10px;
    padding: 14px 32px;
    font-size: 1rem;
    font-weight: 600;
    width: 100%;
    transition: all 0.3s ease;
    margin-top: 10px;
  }

  .submit-btn:hover {
    background: var(--dark-red);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(255, 56, 92, 0.3);
  }

  .cancel-btn {
    background: #fff;
    color: #222;
    border: 2px solid #ddd;
    border-radius: 10px;
    padding: 14px 32px;
    font-size: 1rem;
    font-weight: 600;
    width: 100%;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-block;
    text-align: center;
  }

  .cancel-btn:hover {
    border-color: #222;
    color: #222;
    background: #f8f9fa;
  }

  .form-text {
    color: #717171;
    font-size: 0.85rem;
    margin-top: 6px;
  }

  .icon-label {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .icon-label i {
    color: var(--primary-red);
    font-size: 1.1rem;
  }

  @media (max-width: 768px) {
    .listing-form {
      padding: 30px 20px;
    }

    .page-header h1 {
      font-size: 1.75rem;
    }
  }
</style>

<div class="edit-listing-container">
  
  <!-- Page Header -->
  <div class="page-header">
    <h1><i class="fas fa-edit" style="color: var(--primary-red);"></i> Edit Listing</h1>
    <p>Update your listing details</p>
  </div>

  <!-- Form -->
  <form action="/listings/<%= curr._id %>?_method=PUT" method="POST" class="listing-form">
    
    <!-- Title -->
    <div class="mb-4">
      <label for="title" class="form-label">
        <div class="icon-label">
          <i class="fas fa-heading"></i>
          <span>Title</span>
        </div>
      </label>
      <input 
        type="text" 
        class="form-control" 
        id="title" 
        name="title" 
        value="<%= curr.title %>"
        placeholder="e.g., Cozy Beach House in Goa" 
        required
      >
      <div class="form-text">Choose a catchy title that describes your place</div>
    </div>

    <!-- Description -->
    <div class="mb-4">
      <label for="description" class="form-label">
        <div class="icon-label">
          <i class="fas fa-align-left"></i>
          <span>Description</span>
        </div>
      </label>
      <textarea 
        class="form-control" 
        id="description" 
        name="description" 
        placeholder="Describe what makes your place special..."
        required
      ><%= curr.description %></textarea>
      <div class="form-text">Highlight the best features and amenities</div>
    </div>

    <!-- Image URL -->
    <div class="mb-4">
      <label for="imageUrl" class="form-label">
        <div class="icon-label">
          <i class="fas fa-image"></i>
          <span>Image URL</span>
        </div>
      </label>
      <input 
        type="url" 
        class="form-control" 
        id="imageUrl" 
        name="image[url]" 
        value="<%= curr.image.url %>"
        placeholder="https://example.com/image.jpg" 
        required
      >
      <div class="form-text">Add a link to a high-quality photo of your property</div>
    </div>

    <!-- Image Filename (Hidden) -->
    <input type="hidden" name="image[filename]" value="<%= curr.image.filename %>">

    <!-- Price -->
    <div class="mb-4">
      <label for="price" class="form-label">
        <div class="icon-label">
          <i class="fas fa-rupee-sign"></i>
          <span>Price per Night</span>
        </div>
      </label>
      <div class="input-group">
        <span class="input-group-text">â‚¹</span>
        <input 
          type="number" 
          class="form-control" 
          id="price" 
          name="price" 
          min="0" 
          value="<%= curr.price %>"
          placeholder="1200" 
          required
        >
      </div>
      <div class="form-text">Set your nightly rate in Indian Rupees</div>
    </div>

    <!-- Location & Country Row -->
    <div class="row g-3 mb-4">
      
      <!-- Location -->
      <div class="col-md-6">
        <label for="location" class="form-label">
          <div class="icon-label">
            <i class="fas fa-map-marker-alt"></i>
            <span>Location</span>
          </div>
        </label>
        <input 
          type="text" 
          class="form-control" 
          id="location" 
          name="location" 
          value="<%= curr.location %>"
          placeholder="e.g., Mumbai, Goa" 
          required
        >
      </div>

      <!-- Country -->
      <div class="col-md-6">
        <label for="country" class="form-label">
          <div class="icon-label">
            <i class="fas fa-globe"></i>
            <span>Country</span>
          </div>
        </label>
        <input 
          type="text" 
          class="form-control" 
          id="country" 
          name="country" 
          value="<%= curr.country %>"
          placeholder="e.g., India" 
          required
        >
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="row g-3 mt-2">
      <div class="col-md-6">
        <a href="/listings/<%= curr._id %>" class="cancel-btn">
          <i class="fas fa-times me-2"></i>Cancel
        </a>
      </div>
      <div class="col-md-6">
        <button type="submit" class="submit-btn">
          <i class="fas fa-save me-2"></i>Update Listing
        </button>
      </div>
    </div>

  </form>

</div>