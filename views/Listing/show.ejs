<%layout("../Layouts/boilerplate")%>

<style>
  .show-container {
    max-width: 1200px;
    margin: 40px auto;
    padding: 0 20px;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    color: #222;
    text-decoration: none;
    font-weight: 500;
    margin-bottom: 24px;
    transition: all 0.3s ease;
  }

  .back-link:hover {
    color: var(--primary-red);
    transform: translateX(-5px);
  }

  .listing-detail-card {
    background: #fff;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 2px 16px rgba(0,0,0,0.08);
    border: 1px solid rgba(0,0,0,0.05);
  }

  .listing-image-container {
    position: relative;
    width: 100%;
    height: 500px;
    overflow: hidden;
    background: #f8f9fa;
  }

  .listing-main-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .favorite-btn-large {
    position: absolute;
    top: 20px;
    right: 20px;
    width: 44px;
    height: 44px;
    background: rgba(255, 255, 255, 0.95);
    border: none;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    box-shadow: 0 2px 8px rgba(0,0,0,0.15);
  }

  .favorite-btn-large:hover {
    transform: scale(1.1);
    background: #fff;
  }

  .listing-content {
    padding: 40px;
  }

  .listing-header {
    border-bottom: 1px solid #f0f0f0;
    padding-bottom: 24px;
    margin-bottom: 32px;
  }

  .listing-title {
    font-size: 2rem;
    font-weight: 700;
    color: #222;
    margin-bottom: 12px;
    line-height: 1.2;
  }

  .listing-location {
    display: flex;
    align-items: center;
    gap: 8px;
    color: #717171;
    font-size: 1rem;
    margin-bottom: 16px;
  }

  .listing-location i {
    color: var(--primary-red);
  }

  .listing-price {
    font-size: 1.75rem;
    font-weight: 700;
    color: #222;
    margin-top: 12px;
  }

  .price-label {
    font-size: 1rem;
    font-weight: 400;
    color: #717171;
  }

  .listing-description-section {
    margin-bottom: 32px;
  }

  .section-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: #222;
    margin-bottom: 16px;
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .section-title i {
    color: var(--primary-red);
  }

  .listing-description {
    color: #484848;
    font-size: 1rem;
    line-height: 1.6;
    white-space: pre-wrap;
  }

  .action-buttons {
    display: flex;
    gap: 16px;
    padding-top: 32px;
    border-top: 1px solid #f0f0f0;
  }

  .btn-edit {
    flex: 1;
    background: var(--primary-red);
    color: #fff;
    border: none;
    border-radius: 10px;
    padding: 14px 24px;
    font-size: 1rem;
    font-weight: 600;
    text-decoration: none;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    transition: all 0.3s ease;
  }

  .btn-edit:hover {
    background: var(--dark-red);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(255, 56, 92, 0.3);
    color: #fff;
  }

  .btn-delete {
    flex: 1;
    background: #fff;
    color: #222;
    border: 2px solid #ddd;
    border-radius: 10px;
    padding: 14px 24px;
    font-size: 1rem;
    font-weight: 600;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .btn-delete:hover {
    background: #fff;
    border-color: #dc3545;
    color: #dc3545;
  }

  .info-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 24px;
    margin-top: 24px;
    padding: 24px;
    background: #f8f9fa;
    border-radius: 12px;
  }

  .info-item {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .info-label {
    color: #717171;
    font-size: 0.9rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .info-value {
    color: #222;
    font-size: 1.1rem;
    font-weight: 600;
  }

  @media (max-width: 768px) {
    .listing-image-container {
      height: 300px;
    }

    .listing-content {
      padding: 24px 20px;
    }

    .listing-title {
      font-size: 1.5rem;
    }

    .listing-price {
      font-size: 1.5rem;
    }

    .action-buttons {
      flex-direction: column;
    }

    .info-grid {
      grid-template-columns: 1fr;
      gap: 16px;
    }
  }
</style>

<div class="show-container">
  
  <!-- Back Link -->
  <a href="/listings" class="back-link">
    <i class="fas fa-arrow-left"></i>
    <span>Back to all listings</span>
  </a>

  <!-- Listing Detail Card -->
  <div class="listing-detail-card">
    
    <!-- Image Section -->
    <div class="listing-image-container">
      <img 
        src="<%=curr.image.url%>" 
        alt="<%=curr.title%>"
        class="listing-main-image"
      >
      <button class="favorite-btn-large">
        <svg width="24" height="24" viewBox="0 0 32 32" xmlns="http://www.w3.org/2000/svg">
          <path d="M16 28s-1-1-7.5-7.5C3 15 1 12 1 8.5 1 5.4 3.4 3 6.5 3 9 3 11 4.5 12 6c.5 1 1 2 1 2h6s.5-1 1-2c1-1.5 3-3 5.5-3 3.1 0 5.5 2.4 5.5 5.5 0 3.5-2 6.5-7.5 12C23 26 16 28 16 28z" 
                stroke="#222" stroke-width="2" fill="none"/>
        </svg>
      </button>
    </div>

    <!-- Content Section -->
    <div class="listing-content">
      
      <!-- Header -->
      <div class="listing-header">
        <h1 class="listing-title"><%=curr.title%></h1>
        
        <div class="listing-location">
          <i class="fas fa-map-marker-alt"></i>
          <span><%=curr.location%>, <%=curr.country%></span>
        </div>

        <div class="listing-price">
          <%= new Intl.NumberFormat('en-IN', { style: 'currency', currency: 'INR' }).format(curr.price) %>
          <span class="price-label">/ night</span>
        </div>
      </div>

      <!-- Description Section -->
      <div class="listing-description-section">
        <h2 class="section-title">
          <i class="fas fa-info-circle"></i>
          <span>About this place</span>
        </h2>
        <p class="listing-description"><%=curr.description%></p>
      </div>

      <!-- Reviews Section -->
      <div class="listing-description-section">
        <h2 class="section-title">
          <i class="fas fa-star"></i>
          <span>Reviews</span>
        </h2>

        <% if (curr.reviews && curr.reviews.length > 0) { %>
          <ul class="list-group mb-3">
            <% curr.reviews.forEach(function(r) { %>
              <li class="list-group-item d-flex justify-content-between align-items-start">
                <div class="me-3">
                  <strong>Rating:</strong> <%= r.rating %>/5<br />
                  <span><%= r.comment %></span>
                </div>
                <form action="/listings/<%= curr._id %>/reviews/<%= r._id %>/delete" method="POST">
                  <button type="submit" class="btn btn-sm btn-outline-danger">
                    Delete
                  </button>
                </form>
              </li>
            <% }) %>
          </ul>
        <% } else { %>
          <p class="text-muted">No reviews yet. Be the first to review this place.</p>
        <% } %>
      </div>

      <!-- Add Review Form -->
      <div class="listing-description-section">
        <h2 class="section-title">
          <i class="fas fa-pen"></i>
          <span>Leave a review</span>
        </h2>

        <form action="/listings/<%= curr._id %>/reviews" method="POST">
          <div class="mb-3">
            <label for="rating" class="form-label">Rating (1-5)</label>
            <select id="rating" name="rating" class="form-select" required>
              <option value="" disabled selected>Select rating</option>
              <% for (let i = 5; i >= 1; i--) { %>
                <option value="<%= i %>"><%= i %></option>
              <% } %>
            </select>
          </div>

          <div class="mb-3">
            <label for="comment" class="form-label">Comment</label>
            <textarea
              id="comment"
              name="comment"
              class="form-control"
              rows="3"
              required
            ></textarea>
          </div>

          <button type="submit" class="btn btn-primary">Submit Review</button>
        </form>
      </div>

      <!-- Info Grid -->
      <div class="info-grid">
        <div class="info-item">
          <span class="info-label">
            <i class="fas fa-map-marker-alt me-1"></i> Location
          </span>
          <span class="info-value"><%=curr.location%></span>
        </div>
        
        <div class="info-item">
          <span class="info-label">
            <i class="fas fa-globe me-1"></i> Country
          </span>
          <span class="info-value"><%=curr.country%></span>
        </div>
        
        <div class="info-item">
          <span class="info-label">
            <i class="fas fa-rupee-sign me-1"></i> Price per night
          </span>
          <span class="info-value"><%= new Intl.NumberFormat('en-IN', { style: 'currency', currency: 'INR' }).format(curr.price) %></span>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="action-buttons">
        <a href="/listings/<%=curr._id%>/edit" class="btn-edit">
          <i class="fas fa-edit"></i>
          <span>Edit Listing</span>
        </a>
        
        <form action="/listings/<%=curr._id%>/?_method=DELETE" method="post" style="flex: 1;">
          <button type="submit" class="btn-delete" onclick="return confirm('Are you sure you want to delete this listing?');">
            <i class="fas fa-trash-alt"></i>
            <span>Delete Listing</span>
          </button>
        </form>
      </div>

    </div>
  </div>

</div>