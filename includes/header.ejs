<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WonderLust - Find Your Dream Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700;800&display=swap" rel="stylesheet">

    <style>
        * { font-family: 'Poppins', sans-serif; }
        :root { --primary-red: #FF385C; --dark-red: #E31C5F; }
        body { padding-top: 90px; }

        .navbar {
            background: #fff;
            box-shadow: 0 2px 16px rgba(0,0,0,0.08);
            padding: 1rem 0;
            transition: all 0.3s ease;
            border-bottom: 1px solid rgba(0,0,0,0.05);
        }
        .navbar.scrolled { padding: 0.7rem 0; box-shadow: 0 4px 20px rgba(0,0,0,0.12); }

        .navbar-brand {
            font-size: 1.65rem; font-weight: 700;
            color: var(--primary-red) !important;
            display: flex; align-items: center;
            letter-spacing: -0.5px; transition: transform 0.3s ease;
        }
        .navbar-brand:hover { transform: scale(1.02); }
        .navbar-brand i { margin-right: 8px; font-size: 1.75rem; animation: pulse 2s ease-in-out infinite; }
        @keyframes pulse { 0%,100%{transform:scale(1)} 50%{transform:scale(1.1)} }

        .nav-link {
            color: #222 !important; font-weight: 500; font-size: 0.95rem;
            margin: 0 4px; padding: 10px 18px !important;
            border-radius: 25px; transition: all 0.3s ease;
        }
        .nav-link:hover { background: #f7f7f7; color: var(--primary-red) !important; transform: translateY(-2px); }
        .nav-link.active { background: var(--primary-red); color: #fff !important; box-shadow: 0 4px 12px rgba(255,56,92,0.3); }
        .nav-link.active:hover { background: var(--dark-red); color: #fff !important; transform: none; }

        .btn-nav-login {
            border: 2px solid #ddd; border-radius: 25px;
            padding: 8px 20px !important; font-weight: 600;
        }
        .btn-nav-login:hover { border-color: var(--primary-red); color: var(--primary-red) !important; background: transparent; }

        .btn-nav-signup {
            background: var(--primary-red) !important; color: #fff !important;
            border-radius: 25px; padding: 8px 22px !important; font-weight: 600;
        }
        .btn-nav-signup:hover { background: var(--dark-red) !important; color: #fff !important; box-shadow: 0 4px 12px rgba(255,56,92,0.35); }

        .user-badge {
            display: flex; align-items: center; gap: 8px;
            padding: 6px 14px; border: 1px solid #eee; border-radius: 25px;
            font-size: 0.9rem; font-weight: 500; color: #444; background: #fafafa;
            max-width: 200px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;
        }
        .user-badge i { color: var(--primary-red); flex-shrink: 0; }

        .btn-nav-logout { color: #888 !important; font-size: 0.9rem !important; padding: 8px 14px !important; }
        .btn-nav-logout:hover { color: var(--primary-red) !important; background: transparent !important; }

        .nav-divider { width:1px; height:24px; background:#ddd; margin:0 8px; display:inline-block; }

        .navbar-toggler { border: 2px solid var(--primary-red); padding: 8px 12px; border-radius: 8px; }
        .navbar-toggler:focus { box-shadow: 0 0 0 0.2rem rgba(255,56,92,0.25); }
        .navbar-toggler-icon { background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='%23FF385C' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e"); }

        @media (max-width: 991px) { .nav-link { margin: 5px 0; } body { padding-top: 80px; } .nav-divider { display: none; } }

        /* ── Flash Toasts ── */
        .flash-container {
            position: fixed; top: 100px; right: 24px;
            z-index: 9999; display: flex; flex-direction: column;
            gap: 10px; max-width: 360px; width: 100%;
        }
        .flash-toast {
            position: relative; overflow: hidden;
            display: flex; align-items: flex-start; gap: 12px;
            padding: 14px 18px; border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.12);
            font-size: 0.93rem; font-weight: 500; line-height: 1.45;
            animation: toastIn 0.35s ease forwards;
        }
        @keyframes toastIn  { from{opacity:0;transform:translateX(60px)} to{opacity:1;transform:translateX(0)} }
        @keyframes toastOut { from{opacity:1;transform:translateX(0)}    to{opacity:0;transform:translateX(60px)} }
        .flash-toast.hiding { animation: toastOut 0.3s ease forwards; }

        .flash-toast.success { background:#f0fdf4; border:1px solid #86efac; color:#166534; }
        .flash-toast.error   { background:#fff1f2; border:1px solid #fca5a5; color:#991b1b; }

        .flash-icon { font-size:1.15rem; margin-top:1px; flex-shrink:0; }
        .flash-toast.success .flash-icon { color:#16a34a; }
        .flash-toast.error   .flash-icon { color:#dc2626; }

        .flash-close {
            margin-left:auto; background:none; border:none;
            cursor:pointer; font-size:0.95rem; opacity:0.45;
            padding:0; color:inherit; flex-shrink:0;
        }
        .flash-close:hover { opacity:1; }

        .flash-progress {
            position:absolute; bottom:0; left:0; height:3px;
            border-radius:0 0 12px 12px;
            animation: shrink 4s linear forwards;
        }
        @keyframes shrink { from{width:100%} to{width:0%} }
        .flash-toast.success .flash-progress { background:#16a34a; }
        .flash-toast.error   .flash-progress { background:#dc2626; }
    </style>
</head>
<body>

<!-- ── NAVBAR ── -->
<nav class="navbar navbar-expand-lg fixed-top" id="mainNavbar">
    <div class="container-fluid px-3 px-lg-5">

        <a class="navbar-brand" href="/listings">
            <i class="fas fa-home"></i> WonderLust
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto align-items-lg-center">

                <%
                    // Hide nav links completely on login & signup pages
                    const isAuthPage = (currentPath === '/login' || currentPath === '/signup');
                %>

                <% if (!isAuthPage) { %>

                    <li class="nav-item">
                        <a class="nav-link" href="/listings">
                            <i class="fas fa-list me-1"></i> All Listings
                        </a>
                    </li>

                    <% if (currentUser) { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/listings/new">
                                <i class="fas fa-plus-circle me-1"></i> Add Listing
                            </a>
                        </li>
                    <% } %>

                    <li class="nav-item d-none d-lg-flex align-items-center">
                        <span class="nav-divider"></span>
                    </li>

                    <% if (currentUser) { %>
                        <li class="nav-item d-flex align-items-center">
                            <span class="user-badge">
                                <i class="fas fa-user-circle"></i>
                                <%= currentUser.email %>
                            </span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn-nav-logout" href="/logout">
                                <i class="fas fa-sign-out-alt me-1"></i> Logout
                            </a>
                        </li>
                    <% } else { %>
                        <li class="nav-item">
                            <a class="nav-link btn-nav-login" href="/login">
                                <i class="fas fa-sign-in-alt me-1"></i> Log In
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn-nav-signup" href="/signup">
                                <i class="fas fa-user-plus me-1"></i> Sign Up
                            </a>
                        </li>
                    <% } %>

                <% } else { %>
                    <%# On auth pages: show only a subtle "Back to listings" if logged in, otherwise nothing %>
                    <% if (currentUser) { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/listings">
                                <i class="fas fa-arrow-left me-1"></i> Back to Listings
                            </a>
                        </li>
                    <% } %>
                <% } %>

            </ul>
        </div>
    </div>
</nav>

<!-- ── FLASH TOASTS ── -->
<div class="flash-container" id="flashContainer">

    <% if (successMsg) { %>
        <div class="flash-toast success">
            <i class="fas fa-check-circle flash-icon"></i>
            <span><%= successMsg %></span>
            <button class="flash-close" aria-label="Close"><i class="fas fa-times"></i></button>
            <div class="flash-progress"></div>
        </div>
    <% } %>

    <% if (errorMsg) { %>
        <div class="flash-toast error">
            <i class="fas fa-exclamation-circle flash-icon"></i>
            <span><%= errorMsg %></span>
            <button class="flash-close" aria-label="Close"><i class="fas fa-times"></i></button>
            <div class="flash-progress"></div>
        </div>
    <% } %>

</div>

<script>
    // Navbar scroll shadow
    window.addEventListener("scroll", () => {
        document.getElementById("mainNavbar").classList.toggle("scrolled", window.scrollY > 50);
    });

    // Active link highlight
    const loc = window.location.pathname;
    document.querySelectorAll('.nav-link').forEach(link => {
        if (link.getAttribute('href') === loc) link.classList.add('active');
    });

    // Toast dismiss helper
    function dismissToast(toast) {
        toast.classList.add('hiding');
        toast.addEventListener('animationend', () => toast.remove(), { once: true });
    }

    // Wire up close buttons & auto-dismiss after 4s
    document.querySelectorAll('.flash-toast').forEach(toast => {
        toast.querySelector('.flash-close').addEventListener('click', () => dismissToast(toast));
        setTimeout(() => {
            if (document.contains(toast)) dismissToast(toast);
        }, 4000);
    });
</script>
